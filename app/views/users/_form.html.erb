<%= form_for @user, html: { class: 'edit_user' } do |f| %>
  <div class="row">
    <% if @user.agent? || @user.new_record? %>
      <div class="large-6 columns">
        <h3>Email settings</h3>

        <p>
          <label><%= f.check_box :notify, label: false %> Receive notifications for new tickets</label>
        </p>

        <%= f.text_area :signature, rows: 5, cols: 20, label: false %>
      </div>
    <% end %>

    <div class="large-6 columns">

      <h3>Account settings</h3>
      <p>Only fill in these two fields if you want to modify your password.</p>

      <% if can? :manage, User %>
        <%= f.text_field :email %>
      <% end %>

      <%= f.password_field :password %>

      <%= f.password_field :password_confirmation %>

      <% if can? :manage, User %>
        <%= f.check_box :agent, label: 'User is an agent' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="large-12 columns">
  <hr />
      <%= f.submit 'Save', class: 'button radius' %>
    </div>
  </div>

<% end %>
