<div class="row">
  <div class="large-5 columns large-centered">
  <h2>Sign in</h2>
  
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

    <hr />

    <%= f.label :email %>
    <%= f.email_field :email %>
  
    <%= f.label :password %>
    <%= f.password_field :password %>
  
    <% if devise_mapping.rememberable? -%>
      <label><%= f.check_box :remember_me %> Remember me</label>
    <% end -%>
  
    <hr />
  
    <%= f.submit "Sign in", class: 'button radius' %>  <%= render "devise/shared/links" %>
  <% end %>
  </div>
</div>
