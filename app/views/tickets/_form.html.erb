<%= form_for @ticket, url: tickets_url, html: { multipart: true } do |f| %>

  <%= f.hidden_field :content_type, value: current_user.prefer_plain_text? ? 'text' : 'html' %>

  <h3><%= t(:new_ticket) %></h3>

  <p>
    <%= f.text_field :from %>
  </p>

  <p>
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.text_area :content, class: ('tinymce' unless current_user.prefer_plain_text?) %>
  </p>

  <%= render 'attachments/form', f: f %>

  <p>
    <%= f.submit class: 'button regular radius' %>
  </p>

<% end %>
